<Window x:Class="ujprojekt_2023._02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ujprojekt_2023._02"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="Grid1" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged" Margin="0,0,443,0" LoadingRow="Grid1_LoadingRow"/>
        <Button x:Name="Open" Content="Open" HorizontalAlignment="Left" Margin="366,10,0,0" VerticalAlignment="Top" Width="144" Height="65" Click="Open_Click"/>
        <Button x:Name="Save" HorizontalAlignment="Left" Margin="545,10,0,0" VerticalAlignment="Top" Width="144" Height="65" Content="Save" Click="Save_Click"/>
        <Button x:Name="Count" HorizontalAlignment="Left" Margin="366,110,0,0" VerticalAlignment="Top" Width="144" Height="65" Content="Count" Click="Count_Click"/>
        <Label x:Name="Label" Content="Label" HorizontalAlignment="Left" Margin="545,110,0,0" VerticalAlignment="Top" Height="65" Width="144"/>
        <Button x:Name="AddC" HorizontalAlignment="Left" Margin="366,202,0,0" VerticalAlignment="Top" Width="144" Height="65" Content="Add column" Click="AddC_Click"/>

    </Grid>
</Window>
